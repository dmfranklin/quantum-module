<?xml version="1.0" encoding="UTF-8"?>

<section xml:id="lesson1_3" xmlns:xi="http://www.w3.org/2001/XInclude">
    <title>
        Sarang's Test Zone
    </title>

    <p>Testing out interactive exercises below:</p>

    <exercise label="sarang-exercise-interactive">
        <title>Interactive Exercise</title>
        <dynamic>
            <statement>
                <interactive
                    aspect="1:1" width="50%"
                    platform="javascript"
                    source="http://localhost:9999/source/sarang-widget.js" />
            </statement>
        </dynamic>
        <static>
            <statement>
                <p>Please complete the exercise above!</p>
            </statement>
        </static>
        <hint><p>This should be easy.</p></hint>
    </exercise>

    <exercise label="sarang-exercise-regular">
        <title>Regular Exercise</title>
        <statement>
            <p>What is my name?</p>
        </statement>
        <choices randomize="no">
            <choice correct="yes">
                <statement>
                    <p>Heisenberg</p>
                </statement>
                <feedback>
                    You're goddamn right.
                </feedback>
            </choice>
            <choice>
                <statement>
                    <p>Schrodinger.</p>
                </statement>
                <feedback>
                    You're goddamn wrong.
                </feedback>
            </choice>
        </choices>
        <hint><p>I suggest you tread lightly.</p></hint>
    </exercise>

